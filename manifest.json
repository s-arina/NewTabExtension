{
    "short_name": "New Tab",
    "name": "New Tab Extension",
    "description": "A new tab page with a notepad.",
    "version": "1.0.0",
    "manifest_version": 3,
    "permissions": [
      "storage",
      "tabs",
      "activeTab"
    ],
    "icons": {
      "16": "/images/favicon16.png",
      "32": "/images/favicon32.png",
      "48": "/images/favicon48.png",
      "128": "/images/favicon128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "chrome_url_overrides": {
        "newtab": "extension/build/index.html"
    }
}